<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>CommonExperimentSystem</display-name>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>business.management.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>business.management.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>HiddenCodeFilter</filter-name>
    <filter-class>security.HiddenCodeFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>HiddenCodeFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoginCheckFilter</filter-name>
    <filter-class>security.LoginCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginCheckFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>LoginCheckFilter</filter-name>
    <url-pattern>/Logout</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>HiddenCodeCheckFilter</filter-name>
    <filter-class>security.HiddenCodeCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>HiddenCodeCheckFilter</filter-name>
    <servlet-name>/Login</servlet-name>
  </filter-mapping>
</web-app>